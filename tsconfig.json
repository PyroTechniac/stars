{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./lib",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "discord.js",
            "node-json-db",
            "chalk",
            "glob"
        ],
        "noEmitOnError": true,
        "declaration": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": [
        "src"
    ]
}